/*Инпуты*/
.txta
    margin 10px
    height auto
    width auto
    min-width 400
    background white
    border 2px solid black
    resize both
    overflow auto
    padding 10
    counter-reset number
    list-style-type none
    border-radius 5px
    li
        &::before
            counter-increment number
            content counter(number) "\a0"
            color gray
            padding-right 10

::-webkit-resizer
    border 20px solid transparent
    border-right 20px solid black
    border-bottom 20px solid black

/* Подсказка */
.tooltip
    position absolute
    transform translate(-18px, 0px)
    button
        border none
        font-size 14px
        padding 4
        background white
    .tooltiptext
        visibility hidden
        width 140px
        background-color #555
        color #fff
        text-align center
        border-radius 6px
        padding 5px
        position absolute
        z-index 1
        bottom 145%
        left 50%
        margin-left -10px
        opacity 0
        transition opacity 0.3s
        &::after
            content ""
            position absolute
            top 100%
            right 86%
            margin-left -5px
            border-width 5px
            border-style solid
            border-color #555 transparent transparent transparent
    &:hover
        .tooltiptext
            visibility visible
            opacity 1

/* Checkbox */
.checkbox
    display block
    position relative
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    cursor pointer
    input
        opacity 0
        cursor pointer
        margin 5
        &:checked
            & ~ .checkmark
                background-color red
                &:after
                    display block
    .checkmark
        &:after
            left 7px
            top 2px
            width 5px
            height 10px
            border solid black
            border-width 0 3px 3px 0
            -webkit-transform rotate(45deg)
            -ms-transform rotate(45deg)
            transform rotate(45deg)

.checkmark
    position absolute
    top 0
    left 0
    height 20px
    width 20px
    background-color #eee
    border 2px solid black
    &:after
        content ""
        position absolute
        display none

/* Выбор языка */
select
    height 25px
    width 100px
    border 2px solid black
    font-weight bold
    cursor pointer

/* кнопка "Перевести" */
.btn_2
    width 150px
    height 50px
    border 0
    background #202020
    position relative
    font-size 20px
    font-weight bold
    color #202020
    clip-path polygon(92% 0, 100% 25%, 100% 100%, 8% 100%, 0% 75%, 0 0)
    *
        transition all 0.5s
        display flex
        position absolute
        top 3px
        left 3px
        right 3px
        bottom 3px
    &:hover
        .bgrnd_txt
            color white
        .bgrnd
            transform translate(0px, 0px)

.btn_2content
    background white
    clip-path polygon(92% 0, 100% 25%, 100% 100%, 8% 100%, 0% 75%, 0 0)

.bgrnd
    width 150px
    transform translate(-200px, 0px)
    z-index 1
    background #202020
    box-shadow 20px 0px 0px red

.bgrnd_txt
    transition all 0.5s
    align-items center
    justify-content center
    z-index 2

/* Кнопка "Load" */
.btn_1
    width 150px
    height 50px
    border 0
    background black
    position relative
    font-size 20px
    font-weight bold
    color black
    transition all 0.2s
    &:hover
        .btn_1content
            color white
            background black
        .arrows
            background white
            animation gg 1.5s
    &:active
        .arrows
            background red
            margin 2

.btn_1 .btn_1content,
.arrows,
.btn_1content
    transition all 0.2s
    display flex
    position absolute
    top 3px
    left 3px
    right 3px
    bottom 3px

.arrows
    background black
    margin 1

.btn_1content
    transition all 0.2s
    align-items center
    justify-content center
    background white
    clip-path polygon(92% 0, 100% 25%, 100% 100%, 8% 100%, 0% 75%, 0 0)

/* Icons */
.arrow-down
    height 40px
    width 40px
    border 1px solid rgba(255, 0, 0, 0.4)
    background #101010
    box-shadow 0 0 20px #101010
    position relative
    cursor pointer
    overflow hidden
    display flex
    &:hover
        .arrow-slide
            top 0
        .s
            background black

.s
    top 20
    position absolute
    width 0.75rem
    height 0.1rem
    background red
    display inline-block
    z-index 1

.arrowLeft
    left 10
    transform rotate(45deg)
    transition all 0.4s ease

.arrowRight
    right 10
    transform rotate(-45deg)
    transition all 0.4s ease

.arrow-slide
    left 0
    top -100%
    width 100%
    height 100%
    background red
    position absolute
    display block
    transition all 0.3s ease-in-out

.active
    span
        &:first-of-type
            transform rotate(-45deg)
        &:last-of-type
            transform rotate(45deg)


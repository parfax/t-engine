/* Анимации, Animations */
@keyframes gg
    0%
     opacity 0
    7%
      opacity 1
    13%
       opacity 0
    18%
        opacity 1
@keyframes showBlock
  0%
    opacity: 0
  70%
    opacity: 0
  100%
    opacity: 1

@keyframes redBack
  0%
    transform: translate(-100%, 100%) rotate(45deg)
  100%
    transform: translate(0, 0);

@-webkit-keyframes redBack
  0%
    transform: translate(-100%, 100%) rotate(45deg)
  100%
    transform: translate(0, 0)
@keyframes slide-in
  0%
    top: 50%
    transform: translate(200%, -50%)
    right: -200%
    height: 80%
    width: 80%
  70%
    top: 50%
    right: 50%
    transform: translate(50%, -50%)
    height: 80%
    width: 80%
@-webkit-keyframes slide-in
  0%
    top: 50%
    transform: translate(200%, -50%)
    right: -200%
    height: 80%
    width: 80%
  70%
    top: 50%
    right: 50%
    transform: translate(50%, -50%)
    height: 80%
    width: 80%